{% extends 'layout.html.twig' %}

{% block title %}
	{{pokemon.name}}
{% endblock %}

{% block content %}
    <div class="details">
        <div>
            <a href="/">Back to home</a>
        </div>
        <div class="container">
            <div class="figure">
                {% if pokemon.model3d != "" %}
                    <div id="model3d" style="display:none;">{{pokemon.model3d}}</div>
                    <canvas id="renderCanvas" touch-action="none"></canvas> <!-- touch-action="none" for best results from PEP -->
                    <script src="/js/babylonScene.js"></script>  <!-- Here we call our Babylon code -->
                {% else %}
                    <img src="{{pokemon.image}}">
                {% endif %}
            </div>

            <div class="infos">
                <div class="name">{{pokemon.name}}</div>
                <div class="types">
                    {% for type in pokemon.types %}
                        <p class="type {{type.name}}">{{type.name}}</p>
                    {% endfor %}
                </div>
                <div class="attacks">
                    {% for attack in pokemon.attacks %}
                        <p class="attack"><span class="type {{attack.type}}">{{attack.type}}</span>{{attack.name}}</p>
                    {% endfor %}
                </div>
                    {% if session.username is defined %}{# Display Add or Delete only if the session is set #}
                        {% set location = '/User/addPokemon/'%}
                        {% set label = 'Add to my team'%}  
                        {% for pokemonId in pokemonsId %}
					        {% if pokemon.id == pokemonId %}{# Check if the pokemon is already in the team #}
                                {% set location = '/User/deletePokemon/'%}
                                {% set label = 'Delete from my team'%}                       
                            {% endif %}
                        {% endfor %}
                        <a href={{location ~ pokemon.id}}>{{label}}</a>
                    {% endif %}
            </div>
        </diV>
    </div>
{% endblock %}

